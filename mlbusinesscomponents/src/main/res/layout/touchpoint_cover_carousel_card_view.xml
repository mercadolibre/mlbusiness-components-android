<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="androidx.cardview.widget.CardView">

    <LinearLayout
        android:id="@+id/touchpoint_cover_carousel_card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/touchpoint_cover_carousel_card_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/touchpoint_cover_carousel_card_image_height"
            android:background="@color/andes_gray_070"
            app:actualImageScaleType="centerCrop"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.mercadolibre.android.mlbusinesscomponents.components.row.TouchpointRowView
                android:id="@+id/touchpoint_cover_carousel_card_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

        </FrameLayout>

    </LinearLayout>

    <View
        android:id="@+id/touchpoint_cover_carousel_card_image_skeleton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/touchpoint_cover_carousel_card_image_height"
        android:background="@color/andes_gray_070"/>

</merge>