<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_height="200dp"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/loyaltyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        android:lineSpacingExtra="4sp"
        android:maxLines="2"
        android:textAppearance="@style/MLFont.Bold.Semi"
        android:textColor="@color/andes_gray_900"
        android:textSize="@dimen/ui_fontsize_small"
        app:layout_constraintBottom_toTopOf="@+id/loyaltySubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/loyaltyRing"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Sumaste 20 Mercado Puntos dsfsdf sdfsf sdfsdf sdfsdf sfsd" />

    <TextView
        android:id="@+id/loyaltySubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="?selectableItemBackground"
        android:lineSpacingExtra="4.5sp"
        android:textAppearance="@style/MLFont.Regular"
        android:textColor="@color/andes_gray_550"
        android:textSize="@dimen/ui_fontsize_xsmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/loyaltyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/loyaltyTitle"
        app:layout_constraintTop_toBottomOf="@+id/loyaltyTitle"
        tools:text="Una vez que se acredite tu pago, ganarÃ¡s 20 mercado puntos." />

    <TextView
        android:id="@+id/loyaltyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:lineSpacingExtra="4.5sp"
        android:maxLines="1"
        android:textAppearance="@style/MLFont.Bold.Semi"
        android:textColor="@color/ui_components_android_color_accent"
        android:textSize="@dimen/ui_fontsize_xsmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/loyaltySubtitle"
        app:layout_constraintTop_toBottomOf="@+id/loyaltySubtitle"
        tools:text="Ver mis beneficios" />

    <com.mercadolibre.android.mlbusinesscomponents.components.loyalty.LoyaltyProgress
        android:id="@+id/loyaltyRing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />
</merge>